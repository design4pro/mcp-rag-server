# MCP RAG Server Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# GEMINI API CONFIGURATION
# =============================================================================
# Required: Your Gemini API key from Google AI Studio
GEMINI_API_KEY=your_gemini_api_key_here

# Optional Gemini settings (with defaults)
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_EMBEDDING_MODEL=text-embedding-004
GEMINI_MAX_TOKENS=4096
GEMINI_TEMPERATURE=0.7

# =============================================================================
# QDRANT VECTOR DATABASE CONFIGURATION
# =============================================================================
# Qdrant connection settings
QDRANT_URL=http://localhost:6333

# Collection settings
QDRANT_COLLECTION_NAME=documents
QDRANT_COLLECTION_PREFIX=
QDRANT_VECTOR_SIZE=768
QDRANT_DISTANCE_METRIC=Cosine

# Qdrant service ports (for Docker)
QDRANT_SERVICE_HTTP_PORT=6333
QDRANT_SERVICE_GRPC_PORT=6334

# =============================================================================
# MEM0 MEMORY LAYER CONFIGURATION
# =============================================================================
# Local storage settings
MEM0_LOCAL_STORAGE_PATH=./data/mem0_data
MEM0_SELF_HOSTED=true

# Project isolation settings
MEM0_PROJECT_NAMESPACE=
MEM0_DEFAULT_USER_ID=default

# Memory settings
MEM0_MEMORY_SIZE=1000
MEM0_RELEVANCE_THRESHOLD=0.7
MEM0_MAX_TOKENS_PER_MEMORY=1000

# Memory search settings
MEM0_USE_SEMANTIC_SEARCH=true
MEM0_SEMANTIC_SEARCH_WEIGHT=0.7
MEM0_KEYWORD_SEARCH_WEIGHT=0.3
MEM0_RECENCY_WEIGHT=0.1
MEM0_MAX_MEMORY_CONTEXT_LENGTH=2000
MEM0_ENABLE_MEMORY_SUMMARIZATION=true

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
# Server connection settings
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000

# FastMCP settings (for HTTP server)
FASTMCP_HOST=0.0.0.0
FASTMCP_PORT=8001

# Logging and debugging
LOG_LEVEL=INFO
DEBUG=false

# Session management
MCP_SESSION_TIMEOUT_HOURS=24
MCP_MAX_SESSIONS_PER_USER=10
MCP_SESSION_CLEANUP_INTERVAL_MINUTES=5
MCP_ENABLE_SESSION_TRACKING=true

